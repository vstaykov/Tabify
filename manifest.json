{
    "manifest_version": 2,
    "name": "Tabify",
    "version": "1.0",
    "description": "Manages different aspects of your tabs interactions",
    "icons": {
        "16": "icons/tabs_16.png",
        "24": "icons/tabs_24.png",
        "32": "icons/tabs_32.png",
        "64": "icons/tabs_64.png",
        "128": "icons/tabs_128.png"
    },
    "browser_action": {
        "default_icon": "icons/tabs_512.png",
        "default_popup": "public/html/popup.html"
    },
    "background": {
        "scripts": [
            "dist/eventPage.js"
        ],
        "persistent": false
    },
    "commands": {
        "toggle-quite-mode": {
            "suggested_key": {
                "default": "Ctrl+Q",
                "mac": "Command+Q"
            },
            "description": "Toggle quite mode on or off"
        },
        "global-toggle-quite-mode": {
            "suggested_key": {
                "default": "Ctrl+Shift+1",
                "mac": "Command+Shift+1"
            },
            "description": "Toggle quite mode on or off",
            "global": true
        }
    },
    "permissions": [
        "tabs",
        "commands"
    ]
}